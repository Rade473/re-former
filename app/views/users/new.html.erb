<%= form_for @user do |f|%>
  <%= f.label :username%>
  <%= f.text_field :username,placeholder:"Username here"%>
   <% @user.errors.full_messages_for(:username).each do |message| %>
      <div><%= message %></div>
    <% end %><br>
  <%= f.label :email%>
  <%= f.text_field :email,placeholder:"user@email.com"%>
   <% @user.errors.full_messages_for(:email).each do |message| %>
      <div><%= message %></div>
    <% end %>
    <br>
  <%= f.label :password%>
  <%= f.password_field :password%>
   <% @user.errors.full_messages_for(:password).each do |message| %>
      <div><%= message %></div>
    <% end %>
    <br>
  <%= f.submit%>
<% end %>
